---
import '../styles/global.css';
import PostHog from '../components/posthog.astro';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Will Be Done — Open Source Task Manager | Local-First, Offline, Instant',
  description = "Open source task management that's actually instant and actually works offline. Local-first architecture keeps your full database in the browser — no network latency, works when your server is down. Weekly planning, kanban boards, real-time sync, mobile-ready. Free cloud or one Docker command to self-host.",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/logo.svg" />
    <link rel="apple-touch-icon" href="/ios/180.png" />
    <link rel="manifest" href="/manifest.json" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="theme-color" content="#0a0a0f" />
    <link rel="canonical" href="https://will-be-done.app/" />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Will Be Done" />
    <meta property="og:title" content="Will Be Done — Open Source Task Manager. Actually Instant. Actually Offline." />
    <meta property="og:description" content="Local-first architecture. True offline support. Real-time sync across tabs and devices. Weekly planner, kanban boards, mobile-ready. Free cloud version or self-host with one Docker command." />
    <meta property="og:url" content="https://will-be-done.app/" />
    <meta property="og:image" content="https://will-be-done.app/screen.png" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Will Be Done — Open Source Task Manager. Actually Instant. Actually Offline." />
    <meta name="twitter:description" content="Local-first architecture. True offline support. Real-time sync across tabs and devices. Weekly planner, kanban boards, mobile-ready." />
    <meta name="twitter:image" content="https://will-be-done.app/screen.png" />

    <PostHog />

    <!-- Structured Data -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@graph": [
        {
          "@type": "WebSite",
          "name": "Will Be Done",
          "url": "https://will-be-done.app",
          "description": "Open source task management that's actually instant and actually works offline. Local-first architecture with real-time sync, weekly planning, and kanban boards."
        },
        {
          "@type": "SoftwareApplication",
          "name": "Will Be Done",
          "description": "Open source task management with local-first architecture. Every action is instant, works offline, and syncs in real-time. Weekly planning, kanban boards, mobile-ready. Self-host with Docker or use the free cloud version.",
          "applicationCategory": "ProductivityApplication",
          "operatingSystem": "Web, Docker",
          "offers": {
            "@type": "Offer",
            "price": "0",
            "priceCurrency": "USD"
          },
          "featureList": [
            "Weekly timeline view",
            "Kanban boards per project",
            "Drag & drop task management",
            "Vim keybindings",
            "Multiple workspaces",
            "Local-first architecture",
            "True offline support",
            "Mobile-friendly UI",
            "Offline-first with sync",
            "Self-hosted via Docker",
            "Real-time sync across tabs"
          ],
          "screenshot": "https://will-be-done.app/screen.png",
          "license": "https://www.gnu.org/licenses/agpl-3.0.html",
          "codeRepository": "https://github.com/will-be-done/will-be-done"
        }
      ]
    }
    </script>
  </head>
  <body>
    <slot />
  </body>
</html>

<style>
  html, body {
    margin: 0;
    width: 100%;
  }
</style>
