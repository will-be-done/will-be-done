#!/usr/bin/env bash

# S3 SQLite Backup Configuration
# Copy this file to .kamal/secrets and fill in your actual values
# The secrets file is sourced by Kamal to inject environment variables

# Enable/disable S3 backups
echo $IS_S3_SQLITE_BACKUP_ENABLED

# S3/R2 Credentials (reusing Litestream credentials for Cloudflare R2)
echo $S3_ACCESS_KEY_ID
echo $S3_SECRET_ACCESS_KEY
echo $S3_ENDPOINT
echo $S3_BUCKET_NAME
echo $S3_REGION

# Example values (replace with your actual values):
# export IS_S3_SQLITE_BACKUP_ENABLED=true
# export S3_ACCESS_KEY_ID=your-access-key
# export S3_SECRET_ACCESS_KEY=your-secret-key
# export S3_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
# export S3_BUCKET_NAME=will-be-done-backups
# export S3_REGION=auto
