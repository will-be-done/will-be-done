#!/usr/bin/env bash

# S3 SQLite Backup Configuration
# Copy this file to .kamal/secrets and fill in your actual values
# The secrets file is sourced by Kamal to inject environment variables

# Enable/disable S3 backups
echo $WBD_BACKUP_S3_ENABLED

# S3/R2 Credentials (reusing Litestream credentials for Cloudflare R2)
echo $WBD_BACKUP_S3_ACCESS_KEY_ID
echo $WBD_BACKUP_S3_SECRET_ACCESS_KEY
echo $WBD_BACKUP_S3_ENDPOINT
echo $WBD_BACKUP_S3_BUCKET_NAME
echo $WBD_BACKUP_S3_REGION

# Example values (replace with your actual values):
# export WBD_BACKUP_S3_ENABLED=true
# export WBD_BACKUP_S3_ACCESS_KEY_ID=your-access-key
# export WBD_BACKUP_S3_SECRET_ACCESS_KEY=your-secret-key
# export WBD_BACKUP_S3_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
# export WBD_BACKUP_S3_BUCKET_NAME=will-be-done-backups
# export WBD_BACKUP_S3_REGION=auto
